{
  "name": "basisjs-tools-build",
  "title": "Basis.js build tools",
  "version": "1.10.3",
  "homepage": "https://github.com/basisjs/basisjs-tools",
  "description": "Build tools for basis.js framework",
  "author": "Roman Dvornov <rdvornov@gmail.com>",
  "license": "MIT",
  "contributors": [
    "Roman Dvornov <rdvornov@gmail.com>"
  ],
  "repository": "basisjs/basisjs-tools-build",
  "main": "./lib/index.js",
  "engines": {
    "node": ">=0.12.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "no-undef": 2,
      "no-unused-vars": [2, {"vars": "all", "args": "after-used"}]
    }
  },
  "scripts": {
    "test": "mocha",
    "lint": "jscs lib && eslint lib",
    "lint-and-test": "npm run lint && npm test",
    "travis": "npm run lint-and-test"
  },
  "dependencies": {
    "basisjs-tools-ast": "~1.5.0",
    "basisjs-tools-config": "~1.1.0",
    "chalk": "~1.1.1",
    "clap": "^1.2.0",
    "es6-promise-polyfill": "^1.2.0",
    "fixed-width-string": "^1.0.0",
    "mime": "~1.3.4",
    "minimatch": "^3.0.2",
    "resolve": "^1.1.7",
    "seedrandom": "~2.4.2",
    "uglify-js": "1.3.5"
  },
  "devDependencies": {
    "eslint": "^2.2.0",
    "jscs": "~2.11.0",
    "mocha": "~2.3.4"
  },
  "files": [
    "bin",
    "lib",
    "LICENSE",
    "README.md"
  ]
}
