{
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 5
  },
  "env": {
    "node": true,
    "mocha": true
  },
  "globals": {
    "Set": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "semi": "error",
    "no-console": "off",
    "no-cond-assign": "off",
    "space-before-blocks": "error",
    "spaced-comment": "error",
    "curly": "error",
    "no-caller": "error",
    "no-else-return": "error",
    "no-empty-function": "error",
    "no-new-wrappers": "error",
    "no-with": "error",
    "block-spacing": "error",
    "brace-style": [
      "error",
      "1tbs"
    ],
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1
      }
    ],
    "newline-after-var": "error",
    "newline-before-return": "error",
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxEOF": 1
      }
    ],
    "no-tabs": "error",
    "one-var-declaration-per-line": "error",
    "quotes": [
      "error",
      "single"
    ],
    "max-statements-per-line": [
      "error",
      {
        "max": 1
      }
    ],
    "keyword-spacing": [
      "error",
      {
        "after": true
      }
    ],
    "key-spacing": [
      "error",
      {
        "afterColon": true
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "dot-notation": "error",
    "no-eval": "error",
    "no-multi-spaces": "error",
    "yoda": "error",
    "camelcase": [
      "error",
      {
        "properties": "never"
      }
    ],
    "comma-spacing": [
      "error",
      {
        "after": true
      }
    ],
    "lines-around-directive": [
      "error",
      "always"
    ],
    "max-nested-callbacks": [
      "error",
      5
    ]
  }
}
